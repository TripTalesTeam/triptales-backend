{
    "info": {
      "name": "TripCompanion API",
      "_postman_id": "bcee28b1-e659-43e2-b2d2-78a24b22e6f1",
      "description": "API collection for managing trip companions",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Add Companion to Trip",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "url": {
            "raw": "http://localhost:8080/api/trip-companions",
            "protocol": "http",
            "host": ["localhost"],
            "port": "8080",
            "path": ["api", "trip-companions"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"trip_id\": \"{{tripId}}\",\n  \"user_id\": \"{{userId}}\"\n}"
          }
        }
      },
      {
        "name": "Get All Companions by Trip ID",
        "request": {
          "method": "GET",
          "url": {
            "raw": "http://localhost:8080/api/trip-companions/{{tripId}}",
            "protocol": "http",
            "host": ["localhost"],
            "port": "8080",
            "path": ["api", "trip-companions", "{{tripId}}"]
          }
        }
      },
      {
        "name": "Remove Companion from Trip",
        "request": {
          "method": "DELETE",
          "url": {
            "raw": "http://localhost:8080/api/trip-companions/{{tripId}}",
            "protocol": "http",
            "host": ["localhost"],
            "port": "8080",
            "path": ["api", "trip-companions", "{{tripId}}"]
          },
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{your_token_if_needed}}"
            }
          ]
        }
      }
    ]
  }
  